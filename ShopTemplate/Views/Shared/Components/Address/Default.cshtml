@model AddressDataViewModel

<div class="form-group">
    <label asp-for="@Model.Country"></label>
    <input asp-for="@Model.Country" class="form-control" />
    <span asp-validation-for="@Model.Country" class="text-danger"></span>
</div>

<div class="form-group">
    <label asp-for="@Model.City"></label>
    <input asp-for="@Model.City" class="form-control" />
    <span asp-validation-for="@Model.City" class="text-danger"></span>
</div>

<div class="form-group">
    <label asp-for="@Model.Street"></label>
    <input asp-for="@Model.Street" class="form-control" />
    <span asp-validation-for="@Model.Street" class="text-danger"></span>
</div>

<div class="form-group">
    <label asp-for="@Model.State"></label>
    <input asp-for="@Model.State" class="form-control" />
    <span asp-validation-for="@Model.State" class="text-danger"></span>
</div>

<div class="form-group">
    <label asp-for="@Model.BuildingNumber"></label>
    <input asp-for="@Model.BuildingNumber" class="form-control" />
    <span asp-validation-for="@Model.BuildingNumber" class="text-danger"></span>
</div>

<div class="form-group">
    <label asp-for="@Model.ZipCode"></label>
    <input asp-for="@Model.ZipCode" class="form-control" />
    <span asp-validation-for="@Model.ZipCode" class="text-danger"></span>
</div>

<input asp-for="@Model.Id" value="@Model.Id" type="hidden" />