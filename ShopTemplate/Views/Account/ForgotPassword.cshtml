@model ForgotPasswordViewModel

@{ ViewBag.Title = "Forgot password"; }


<div class="row">

    <div class="col-xs-8 col-xs-offset-2">

        <h3 class="text-center">Please provide your email address. We'll send you password-reseting link</h3>
        <form asp-action="ForgotPassword" method="post" class="form-horizontal">

            <div class="form-group">
                <label asp-for="Email" class="col-sm-2"></label>
                <div class="col-sm-10">
                    <input asp-for="Email" class="form-control" value="@Model.Email" />
                </div>
            </div>

            <div asp-validation-summary="All"></div>

            <button type="submit" class="btn btn-primary">Submit</button>

        </form>

    </div>

</div>